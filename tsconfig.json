{
  "include": ["src/**/*", "demo/**/*"],
  "exclude": ["src/**/*.test.ts"],
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "module": "es6",
    "lib": ["ES2020", "dom"],
    "skipLibCheck": true,

    "baseUrl": ".",
    "paths": {
      "dag-web-tools": ["src/index.ts"],
      "assets/*": ["demo/src/assets/*"],
      "hooks": ["demo/src/hooks/index.tsx"],
      "contexts": ["demo/src/contexts/index.tsx"],
      "components": ["demo/src/components/index.tsx"],
      "nodes": ["demo/src/nodes/index.tsx"],
      "edges": ["demo/src/edges/index.tsx"],
      "pages": ["demo/src/pages/index.tsx"]
    },

    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    
    "jsx": "react",

    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true
  }
}
